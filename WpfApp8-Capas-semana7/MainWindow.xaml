<Window x:Class="WpfApp8_Capas_semana7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8_Capas_semana7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Listar Producto" Width="100" Foreground="Green" Background="AliceBlue" Click="btn_listProduct" Margin="20" Padding="10"/>

        <Grid HorizontalAlignment="Center">
            <TextBlock Margin="10" >Buscar producto por nombre</TextBlock>
            <TextBox Name="textName" Margin="30" Width="100"/>
        </Grid>

        <DataGrid Name="listProduct" Margin="100,5, 100, 10" />
        
    </StackPanel>
</Window>
